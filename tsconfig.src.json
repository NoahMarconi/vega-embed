{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "strict": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "incremental": true
  },
  "files": ["src/index.ts"]
}
